generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Category {
  FLOWER
  HASH
}

model User {
  id           String     @id @db.Uuid // Changed to UUID
  name         String?
  email        String     @unique
  passwordHash String? // for credentials
  role         Role       @default(USER)
  votes        Vote[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt // Added updatedAt, standard practice
  Producer     Producer[]
}

model Producer {
  id          String   @id @default(cuid())
  name        String
  category    Category
  logoUrl     String?
  createdAt   DateTime @default(now())
  createdBy   User?    @relation(fields: [createdById], references: [id])
  createdById String?
  votes       Vote[]

  @@unique([name, category])
}

model Vote {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  producer   Producer @relation(fields: [producerId], references: [id])
  producerId String
  value      Int // +1 or -1
  createdAt  DateTime @default(now())

  @@unique([userId, producerId])
}
